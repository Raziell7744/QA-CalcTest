#!/usr/bin/perl
## Initially generated by Win32-GuiTest Recorder (v1.03)

## Authors: Alon Bukai and Daniel Razilov

## Pragmas/Directives
use strict;
use warnings;

## Imports
use Win32::GuiTest qw/:ALL/;
$Win32::GuiTest::debug = 0;    # Set to "1" to enable debug output.

## Variables/Constants
my $fgWindow   = 0;            # Foreground Window
my $testPassed = 0;
my $testFailed = 0;

## Functions
# From https://stackoverflow.com/questions/31262739/difference-between-chomp-and-trim-in-perl
sub trim($) {
    my $string = shift;
    $string =~ s/^\s+//;
    $string =~ s/\s+$//;
    return $string;
}

# Reading from input file
my $inputFileName = '.\input.txt';
open( my $inputFile, '<:encoding(UTF-8)', $inputFileName )
  or die "Could not open file '$inputFileName' $!";

# Reading from expected results file
my $expectedResultsFileName = '.\expectedResults.txt';
open( my $expectedResultsFile, '<:encoding(UTF-8)', $expectedResultsFileName )
  or die "Could not open file '$expectedResultsFileName' $!";

# Writing to result file
my $resultFileName = '.\result.txt';
open( my $resultFile, '>:encoding(UTF-8)', $resultFileName )
  or die "Could not open file '$resultFileName' $!";

sub assert {
    my $index           = $_[0];
    my $result          = $_[1];
    my @expectedLines   = @_;
    my $lineIndex       = $index + 1;
    my $currentExpected = trim( $expectedLines[$lineIndex] );
    if ( $result eq $currentExpected ) {
        $testPassed++;

        print $resultFile "PASSED: Id - ", $index, " Result: ", $result,
          " matches Expected: ", $currentExpected, "\n";
    }
    else {
        $testFailed++;

        print $resultFile "FAILED: Id - ", $index, " Result: ", $result,
          " doesn't match Expected: ", $currentExpected, "\n";
    }
}

## Main/Core
# Open calculator
system('"C:\Windows\System32\calc.exe"');
sleep(1);

# Focus to calculator window
my @arr;
my @hwnds;
@arr = FindWindowLike( undef, 'Calculator' );

my $index      = 1;
my $testType   = 0;    # 0 - Calculate the diff, 1 - Add or sub days
my $resultType = 0;    # 0 - None, 1 - Diff All, 2 - Diff Days
my $result     = "";
my @expectedLines = <$expectedResultsFile>;

while ( my $row = <$inputFile> ) {
    $resultType = 0;

    print $resultFile "Test Case ", $index, ": ";

    # Input Test Params
    chomp $row;

    for my $char ( split //, $row ) {
        if ( $char eq '#' ) {
            print $resultFile "SKIPPED \n";
            last;
        }
        if ( $char eq 'C' ) {

            # Calculate the difference between two dates
            $testType = 0;

            # Reset Date Screen - BeforeEach
            # Ctrl + F4 to change to basic
            SendKeys('^{F4}');
            sleep(1);

            # Ctrl + E to change to date calc
            SendKeys('^e');
            sleep(1);

            # UP to make sure we are on the correct option
            SendKeys('{UP}');
            sleep(1);

            #TAB to move to choose date mode
            SendKeys('{TAB}');
            sleep(1);

            next;
        }
        elsif ( $char eq 'A' ) {

            # Add or subtracts days to a specified date
            $testType = 1;

            # Reset Date Screen - BeforeEach
            # Ctrl + F4 to change to basic
            SendKeys('^{F4}');
            sleep(1);

            # Ctrl + E to change to date calc
            SendKeys('^e');
            sleep(1);

            # DOWN to make sure we are on the correct option
            SendKeys('{DOWN}');
            sleep(1);

            #TAB to move to choose date mode
            SendKeys('{TAB}');
            sleep(1);
            next;
        }
        if ( $testType eq 0 ) {
            if ( $char eq ' ' ) {
            }
            elsif ( $char eq 'T' ) {
                SendKeys('{TAB}');
                print $resultFile " -> ";
            }
            elsif ( $char eq 'E' ) {
                SendKeys('{ENT}');    # Enter
                print $resultFile " CALC \n";

                # Get Output from Window
                @hwnds = GetChildWindows(@arr);
                for (@hwnds) {
                    my $text = WMGetText($_);
                    if ( $text ne '' ) {
                        if (
                            $text eq 'Difference (years, months, weeks, days)' )
                        {
                            $resultType = 1;
                        }
                        elsif ( $text eq 'Difference (days)' ) {
                            $resultType = 2;
                        }
                        elsif ( $resultType eq 1 ) {
                            $result     = $text . " - ";
                            $resultType = 0;
                        }
                        elsif ( $resultType eq 2 ) {
                            $result     = trim( $result . $text );
                            $resultType = 0;
                        }
                    }
                }

                # Assert against Expected Results
                assert( $index, $result, @expectedLines );
            }
            else {
                SendKeys("{$char}");
                print $resultFile $char;
            }
        }
        elsif ( $testType eq 1 ) {
            if ( $char eq ' ' ) {
            }
            elsif ( $char eq '+' ) {
                print $resultFile "Plus";
            }
            elsif ( $char eq '-' ) {
                SendKeys('{RIG}');    # Right
                select( undef, undef, undef, 1 );
                print $resultFile "Minus";
            }
            elsif ( $char eq 'T' ) {
                SendKeys('{TAB}');
                select( undef, undef, undef, 1 );
                print $resultFile " -> ";
            }
            elsif ( $char eq 'Y' ) {
                SendKeys('{TAB}');
                select( undef, undef, undef, 1 );
                print $resultFile " Years-";
            }
            elsif ( $char eq 'M' ) {
                SendKeys('{TAB}');
                select( undef, undef, undef, 1 );
                print $resultFile " Months-";
            }
            elsif ( $char eq 'D' ) {
                SendKeys('{TAB}');
                select( undef, undef, undef, 1 );
                print $resultFile " Days-";
            }
            elsif ( $char eq 'x' ) {

                # Char x instead of a number.
                # We expect an error message and the last input to be unchanged
                SendKeys("{$char}");
                print $resultFile $char;

            }
            elsif ( $char eq 'E' ) {
                SendKeys('{ENT}');    # Enter
                select( undef, undef, undef, 1 );
                print $resultFile " CALC \n";

                # Get Output from Window
                @hwnds = GetChildWindows(@arr);
                for (@hwnds) {
                    my $text = WMGetText($_);
                    if ( $text ne '' ) {
                        if ( $text eq 'Date' ) {
                            $resultType = 1;
                        }
                        elsif ( $resultType eq 1 ) {
                            $result     = trim($text);
                            $resultType = 0;
                        }
                    }
                }

                # Assert against Expected Results
                assert( $index, $result, @expectedLines );

            }
            else {
                SendKeys("{$char}");
                print $resultFile $char;
            }
        }
    }
    $index++;
}

print $resultFile "Tests passed: ", $testPassed, "\n";
print $resultFile "Tests failed: ", $testFailed;

# Close the calculator
SendKeys('%{F4}');
